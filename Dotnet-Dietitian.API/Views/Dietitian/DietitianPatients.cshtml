@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Patient search functionality
            const searchPatient = document.getElementById('patientSearch');
            if (searchPatient) {
                searchPatient.addEventListener('keyup', function () {
                    const searchValue = this.value.toLowerCase();
                    const activeTab = document.querySelector('.tab-pane.active');
                    const patientRows = activeTab.querySelectorAll('tbody tr');
                    
                    patientRows.forEach(row => {
                        const patientName = row.querySelector('h6')?.textContent.toLowerCase() || '';
                        const patientId = row.querySelector('small')?.textContent.toLowerCase() || '';
                        
                        if (patientName.includes(searchValue) || patientId.includes(searchValue)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }
            
            // View patient button handler
            document.querySelectorAll('.view-patient').forEach(button => {
                button.addEventListener('click', function() {
                    const patientId = this.dataset.id;
                    
                    // Show a loading state on the button
                    const originalContent = this.innerHTML;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';
                    this.disabled = true;
                    
                    // Fetch basic patient data for quick preview
                    fetch(`/Dietitian/GetPatientQuickView/${patientId}`, {
                        method: 'GET',
                        headers: {
                            'Accept': 'application/json'
                        }
                    })
                    .then(response => {
                        if (!response.ok) {
                            // If API fails, just navigate to the full patient page
                            window.location.href = `/Dietitian/ViewPatient/${patientId}`;
                            throw new Error('Could not load quick view data');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Reset button state
                        this.innerHTML = originalContent;
                        this.disabled = false;
                        
                        if (data.success) {
                            // Show patient quick view modal
                            const patient = data.patient;
                            
                            // Set modal content
                            document.getElementById('quickViewPatientName').textContent = `${patient.ad} ${patient.soyad}`;
                            document.getElementById('quickViewPatientStatus').innerHTML = patient.diyetProgramiId ? 
                                '<span class="badge bg-success">Aktif</span>' : 
                                '<span class="badge bg-warning text-dark">Beklemede</span>';
                            
                            document.getElementById('quickViewPatientEmail').textContent = patient.email || '-';
                            document.getElementById('quickViewPatientPhone').textContent = patient.telefon || '-';
                            document.getElementById('quickViewPatientAge').textContent = patient.yas ? `${patient.yas} yaş` : '-';
                            document.getElementById('quickViewPatientHeight').textContent = patient.boy ? `${patient.boy} cm` : '-';
                            document.getElementById('quickViewPatientWeight').textContent = patient.kilo ? `${patient.kilo} kg` : '-';
                            document.getElementById('quickViewPatientDietPlan').textContent = patient.diyetProgramiAdi || 'Atanmadı';
                            
                            // Set the view full profile button href
                            document.getElementById('viewFullProfileBtn').href = `/Dietitian/ViewPatient/${patientId}`;
                            
                            // Show the modal
                            const quickViewModal = new bootstrap.Modal(document.getElementById('patientQuickViewModal'));
                            quickViewModal.show();
                        } else {
                            // If there's an issue with the data, just navigate to the full page
                            window.location.href = `/Dietitian/ViewPatient/${patientId}`;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        // Reset button state and redirect to full patient page
                        this.innerHTML = originalContent;
                        this.disabled = false;
                        window.location.href = `/Dietitian/ViewPatient/${patientId}`;
                    });
                });
            });
            
            // Message patient button handler
            document.querySelectorAll('.message-patient').forEach(button => {
                button.addEventListener('click', function() {
                    const patientId = this.dataset.id;
                    // Navigate to messages page with patient filter
                    window.location.href = `/Dietitian/Messages?patientId=${patientId}`;
                });
            });
            
            // Edit patient button handler
            document.querySelectorAll('.edit-patient').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const patientId = this.dataset.id;
                    // Navigate to edit patient page
                    window.location.href = `/Dietitian/EditPatient/${patientId}`;
                });
            });
            
            // Create appointment button handler
            document.querySelectorAll('.create-appointment').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const patientId = this.dataset.id;
                    // Navigate to appointments page with patient pre-selected
                    window.location.href = `/Dietitian/Appointments?newAppointment=true&patientId=${patientId}`;
                });
            });
            
            // Assign patient to dietitian functionality
            document.querySelectorAll('.assign-to-me').forEach(button => {
                button.addEventListener('click', function() {
                    const hastaId = this.dataset.id;
                    const button = this;
                    
                    console.log('Hasta ID:', hastaId); // Debug log to check the ID
                    
                    // Button loading state
                    button.disabled = true;
                    const originalText = button.innerHTML;
                    button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Atanıyor...';
                    
                    // Get the CSRF token from the form
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    
                    // API call to assign patient
                    fetch('/Dietitian/AssignPatientToDietitian', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({ hastaId: hastaId })
                    })
                    .then(response => {
                        console.log('Response status:', response.status); // Debug log
                        return response.json();
                    })
                    .then(data => {
                        console.log('Response data:', data); // Debug log
                        if (data.success) {
                            // Show success message and refresh page
                            alert(data.message);
                            window.location.reload();
                        } else {
                            // Show error message
                            alert(data.message);
                            button.disabled = false;
                            button.innerHTML = originalText;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Hasta atama işlemi sırasında bir hata oluştu.');
                        button.disabled = false;
                        button.innerHTML = originalText;
                    });
                });
            });
            
            // Load diet plans for assignment when the modal is shown
            document.querySelectorAll('.assign-diet-plan').forEach(button => {
                button.addEventListener('click', function() {
                    const patientId = this.dataset.id;
                    document.getElementById('patientId').value = patientId;
                    
                    // Show loading state in select
                    const select = document.getElementById('dietPlanSelect');
                    select.innerHTML = '<option value="" selected disabled>Diyet planları yükleniyor...</option>';
                    
                    // Fetch diet plans from backend using the proper endpoint
                    fetch('/api/Dietitian/DietPlans', {
                        method: 'GET',
                        headers: {
                            'Accept': 'application/json'
                        },
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Diyet planları alınırken bir hata oluştu');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Reset select options
                        select.innerHTML = '<option value="" selected disabled>Diyet planı seçin</option>';
                        
                        // Process the response data and add options to select
                        if (data && Array.isArray(data)) {
                            data.forEach(plan => {
                                const option = document.createElement('option');
                                option.value = plan.id;
                                option.textContent = plan.ad;
                                select.appendChild(option);
                            });
                        } else {
                            // Fallback for error or empty response
                            const option = document.createElement('option');
                            option.value = "";
                            option.textContent = "Diyet planı bulunamadı";
                            option.disabled = true;
                            select.appendChild(option);
                        }
                    })
                    .catch(error => {
                        console.error('Diyet planları yüklenirken hata:', error);
                        select.innerHTML = '<option value="" selected disabled>Diyet planı yüklenemedi</option>';
                    });
                });
            });
            
            // Assign diet plan button click handler
            const assignDietPlanBtn = document.getElementById('assignDietPlanBtn');
            if (assignDietPlanBtn) {
                assignDietPlanBtn.addEventListener('click', function() {
                    const patientId = document.getElementById('patientId').value;
                    const dietPlanId = document.getElementById('dietPlanSelect').value;
                    const button = this;
                    
                    // Input validation
                    if (!dietPlanId) {
                        document.getElementById('dietPlanSelect').classList.add('is-invalid');
                        return;
                    }
                    
                    // Button loading state
                    button.disabled = true;
                    const originalText = button.innerHTML;
                    button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Atanıyor...';
                    
                    // Get the CSRF token from the form
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    
                    // Submit data to backend using the correct CQRS endpoint
                    fetch('/Dietitian/AssignDietPlan', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({
                            hastaId: patientId,
                            diyetProgramiId: dietPlanId
                        })
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Diyet planı atanırken bir hata oluştu');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            // Close modal
                            const modal = bootstrap.Modal.getInstance(document.getElementById('assignDietPlanModal'));
                            modal.hide();
                            
                            // Show success message
                            alert(data.message || 'Diyet planı başarıyla atandı');
                            
                            // Reload page to reflect changes
                            window.location.reload();
                        } else {
                            // Show error message
                            alert(data.message || 'Diyet planı atanırken bir hata oluştu');
                            
                            // Reset button
                            button.disabled = false;
                            button.innerHTML = originalText;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Hata: ' + error.message);
                        
                        // Reset button
                        button.disabled = false;
                        button.innerHTML = originalText;
                    });
                });
            }
            
            // Delete patient
            document.querySelectorAll('.delete-patient').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Get patient ID and store it in the modal
                    const patientId = this.dataset.id;
                    document.getElementById('deletePatientId').value = patientId;
                    
                    // Show the confirmation modal
                    const deleteModal = new bootstrap.Modal(document.getElementById('deletePatientModal'));
                    deleteModal.show();
                });
            });
            
            // Handle delete confirmation
            document.getElementById('confirmDeletePatientBtn').addEventListener('click', function() {
                const patientId = document.getElementById('deletePatientId').value;
                const button = this;
                
                // Button loading state
                button.disabled = true;
                const originalText = button.innerHTML;
                button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Siliniyor...';
                
                fetch(`/api/Patients/${patientId}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Hasta silinirken bir hata oluştu');
                    }
                    return response.text();
                })
                .then(data => {
                    // Close the modal
                    const deleteModal = bootstrap.Modal.getInstance(document.getElementById('deletePatientModal'));
                    deleteModal.hide();
                    
                    // Show success message and reload page
                    alert('Hasta başarıyla silindi');
                    window.location.reload();
                })
                .catch(error => {
                    // Reset button state
                    button.disabled = false;
                    button.innerHTML = originalText;
                    
                    // Show error message
                    alert('Hata: ' + error.message);
                });
            });
        });
    </script>
} 